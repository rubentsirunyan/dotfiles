# open terminal and Firefox with shortcuts
alt - return : open -a Kitty
cmd + alt - return : open -a Firefox

# cycle through windows
#alt - tab : yabai -m window --focus next || yabai -m window --focus stack.next || yabai -m window --focus stack.first || yabai -m window --focus first
#alt + shift - tab : yabai -m window --focus prev || yabai -m window --focus stack.prev || yabai -m window --focus stack.last || yabai -m window --focus last

# change window focus within space
cmd + alt + shift + ctrl - j : yabai -m window --focus stack.next || yabai -m window --focus stack.first || yabai -m window --focus south || yabai -m window --focus first
cmd + alt + shift + ctrl - k : yabai -m window --focus stack.prev || yabai -m window --focus stack.last || yabai -m window --focus north || yabai -m window --focus last
cmd + alt + shift + ctrl - h : yabai -m window --focus stack.prev || yabai -m window --focus stack.last || yabai -m window --focus west || yabai -m window --focus last
cmd + alt + shift + ctrl - l : yabai -m window --focus stack.next || yabai -m window --focus stack.first || yabai -m window --focus east || yabai -m window --focus first

# change focus between external displays (left and right)
cmd + alt + shift + ctrl - n: yabai -m display --focus west
cmd + alt + shift + ctrl - m: yabai -m display --focus east

# rotate layout clockwise
shift + alt - r : yabai -m space --rotate 270

# flip along y-axis
shift + alt - y : yabai -m space --mirror y-axis

# flip along x-axis
shift + alt - x : yabai -m space --mirror x-axis

# toggle stack and bsp for a space
cmd + alt + shift + ctrl - t : yabai -m space --layout bsp
cmd + alt + shift + ctrl - s : yabai -m space --layout stack

# toggle stack and bsp for globally
# alt - t : yabai -m config layout bsp
# alt - s : yabai -m config layout stack

# maximize a window
shift + alt - m : yabai -m window --toggle zoom-fullscreen

# balance out tree of windows (resize to occupy same area)
shift + alt - e : yabai -m space --balance

# swap windows
shift + alt - j : yabai -m window --swap south
shift + alt - k : yabai -m window --swap north
shift + alt - h : yabai -m window --swap west
shift + alt - l : yabai -m window --swap east

# move window and split
ctrl + alt - j : yabai -m window --warp south
ctrl + alt - k : yabai -m window --warp north
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - l : yabai -m window --warp east

# move window to display left and right
shift + alt - s : yabai -m window --display west; yabai -m display --focus west;
shift + alt - g : yabai -m window --display east; yabai -m display --focus east;

# move window to prev and next space
shift + alt - p : yabai -m window --space prev;
shift + alt - n : yabai -m window --space next;

# move window to space
shift + alt - 1 : yabai -m window --space 1;
shift + alt - 2 : yabai -m window --space 2;
shift + alt - 3 : yabai -m window --space 3;
shift + alt - 4 : yabai -m window --space 4;
shift + alt - 5 : yabai -m window --space 5;
shift + alt - 6 : yabai -m window --space 6;
shift + alt - 7 : yabai -m window --space 7;

# stop/start/restart yabai
ctrl + alt - q : yabai --stop-service
ctrl + alt - s : yabai --start-service 
ctrl + alt - r : yabai --restart-service 
